set nocompatible
syntax on

filetype on
filetype plugin on
filetype indent on
set encoding=utf-8

set ruler
set number

set shiftwidth=4
set tabstop=4
set softtabstop=4
set autoindent
set expandtab

set ignorecase
set incsearch
set smartcase
set hlsearch

set showmode
set showmatch
set showcmd

set wildmenu
set wildmode=list:longest
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx

colorscheme PaperColor 
set background=dark
